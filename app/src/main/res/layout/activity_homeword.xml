<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/layout_btm_navi"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbtn1"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:button="@null"
                android:drawableTop="@drawable/btn_home"
                android:gravity="center"
                android:onClick="onclick"
                android:text="首页"
                android:textColor="@color/navi_btm_hover"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_radius1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="-8dp"
                android:layout_marginTop="-8dp"
                android:background="@drawable/radius_red15"
                android:gravity="center"
                android:text="99+"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintRight_toRightOf="@id/rbtn1"
                app:layout_constraintTop_toTopOf="@id/rbtn1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/rbtn2"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:button="@null"
                android:drawableTop="@drawable/btn_news"
                android:gravity="center"
                android:onClick="onclick"
                android:text="新闻"
                android:textColor="@color/navi_btm_hover"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_radius2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="-8dp"
                android:layout_marginTop="-8dp"
                android:background="@drawable/radius_red15"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintRight_toRightOf="@id/rbtn2"
                app:layout_constraintTop_toTopOf="@id/rbtn2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/rbtn3"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:button="@null"
                android:drawableTop="@drawable/btn_novel"
                android:gravity="center"
                android:onClick="onclick"
                android:text="小说"
                android:textColor="@color/navi_btm_hover"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_radius3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/radius_red"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintRight_toRightOf="@id/rbtn3"
                app:layout_constraintTop_toTopOf="@id/rbtn3" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/rbtn4"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:button="@null"
                android:drawableTop="@drawable/btn_center"
                android:gravity="center"
                android:onClick="onclick"
                android:text="我的"
                android:textColor="@color/navi_btm_hover"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_radius4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/radius_red"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintRight_toRightOf="@id/rbtn4"
                app:layout_constraintTop_toTopOf="@id/rbtn4" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RadioGroup>

    <FrameLayout
        android:id="@+id/layout_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/layout_btm_navi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>