<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是第四个fragmnet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_choose1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示第一个选项卡"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_prompt" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_choose2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示第二个选项卡"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_choose1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_choose3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示第三个选项卡"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_choose2" />

</androidx.constraintlayout.widget.ConstraintLayout>