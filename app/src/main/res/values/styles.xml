<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="loading" parent="@android:style/Theme.Dialog">
        <item name="android:indeterminateDrawable">@drawable/loading</item>
        <item name="android:windowFrame">@null</item>        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>        <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item>        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">@color/bg_dialog</item>        <!-- 模糊 -->
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="radiobutton_style" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_news</item>
    </style>
</resources>
