<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--第一层阴影-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0fff0000" />
            <corners
                android:topLeftRadius="@dimen/radiusSize"
                android:topRightRadius="@dimen/radiusSize" />
        </shape>
    </item>
    <!--第二层前景-->
    <item
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/background_light" />
            <corners
                android:bottomLeftRadius="@dimen/radiusSize"
                android:bottomRightRadius="@dimen/radiusSize"
                android:topLeftRadius="@dimen/radiusSize"
                android:topRightRadius="@dimen/radiusSize" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>
</layer-list>